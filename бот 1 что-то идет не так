import telebot as tb

bot=tb.TeleBot('1734364402:AAG6KkcQWpXZNpHHcMASpV-5uF9_hlfHxm8')

keyboard=tb.types.ReplyKeyboardMarkup()
item1=tb.types.KeyboardButton('Солнечно')
item2=tb.types.KeyboardButton('Облачно')
item3=tb.types.KeyboardButton('хватит про погоду')
keyboard.row(item1,item2, item3)
@bot.message_handler(commands=['start'])
def start_message(message):
    bot.send_message(message.chat.id, 'Привет. /start')
    bot.send_message(message.chat.id, 'Как твои дела?')
@bot.message_handler(content_types=['text'])
def new_message(message):
    if message.text=='пока':
        file_id = 'CAACAgIAAxkBAAMXX7Il49hMihzf8uZwfOwCQcLzcyYAAjESAALo1uISckVLg4exC8EeBA'
        bot.send_sticker(message.chat.id, file_id)
    if message.text=='хватит про погоду':
        bot.send_message(message.chat.id, 'Расскажи что-нибудь')
    else:
        bot.send_message(message.chat.id, 'Как погода?',reply_markup=keyboard)

bot.polling()
